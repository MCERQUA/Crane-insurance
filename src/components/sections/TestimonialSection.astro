---
import TestimonialSection from '../ui/TestimonialSection.tsx';

const testimonials = [
  {
    id: 1,
    testimonial: "Their riggers liability coverage saved us $2.3 million when we dropped a generator during a hospital project. Claims process was smooth and professional.",
    author: "Tom Rodriguez",
    company: "Southwest Crane Services"
  },
  {
    id: 2,
    testimonial: "Best crane insurance specialists in the business. They understand our operations and got us compliant with Pennsylvania's state licensing requirements.",
    author: "Jennifer Walsh",
    company: "Keystone Heavy Lifting"
  },
  {
    id: 3,
    testimonial: "When our tower crane was damaged in a storm, they had adjusters on-site within 24 hours. Got us back to work quickly with minimal downtime.",
    author: "Marcus Thompson",
    company: "Metro Construction Cranes"
  },
  {
    id: 4,
    testimonial: "Their equipment floater policy covers our entire fleet at competitive rates. Finally found insurers who actually understand crane operations.",
    author: "Sarah Mitchell",
    company: "Precision Crane Rental"
  },
  {
    id: 5,
    testimonial: "Outstanding workers comp program for our crane operators. They helped us reduce premiums by 20% with their safety training programs.",
    author: "David Park",
    company: "Industrial Lifting Solutions"
  }
];
---

<section class="relative py-20 sm:py-24 bg-dark-steel overflow-hidden">
  {/* Background pattern */}
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.05) 35px, rgba(255,255,255,.05) 70px);"></div>
  </div>
  
  <div class="container-padding max-w-7xl mx-auto relative">
    {/* Section header */}
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-aluminum mb-4">
        What Crane Professionals Say
      </h2>
      <p class="text-lg text-concrete-gray max-w-2xl mx-auto">
        Trusted by crane operators, rental companies, and construction firms nationwide
      </p>
    </div>
    
    {/* Testimonial cards container */}
    <div class="relative h-[500px] sm:h-[550px] flex items-center justify-center">
      <div class="relative w-[320px] sm:w-[350px] h-[400px] sm:h-[450px]">
        <TestimonialSection testimonials={testimonials} client:load />
      </div>
    </div>
    
    {/* Instructions */}
    <div class="text-center mt-8">
      <p class="text-concrete-gray/70 text-sm">
        <span class="hidden sm:inline">Drag the cards to see more reviews</span>
        <span class="sm:hidden">Swipe to see more reviews</span>
      </p>
    </div>
    
    {/* Decorative elements */}
    <div class="absolute top-10 left-10 w-20 h-20 bg-construction-yellow/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-machinery-gray/10 rounded-full blur-3xl"></div>
  </div>
</section>
