---
// Import components with proper paths
import GlassButton from '../ui/GlassButton.tsx';
import LogoScroller from '../ui/LogoScroller.tsx';
---

<section 
  class="relative min-h-screen flex items-center overflow-hidden"
>
  <!-- Static Hero Background -->
  <!-- Background with hero image and overlay -->
  <div class="absolute inset-0 z-0">
    <!-- Hero background image -->
    <img 
      src="/images/hero/construction-hero.jpg"
      alt="Professional construction site with cranes and industrial equipment"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Dark overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-br from-dark-steel/80 via-charcoal-black/70 to-machinery-gray/80"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 w-full px-6 md:px-12 lg:px-16 pb-32 pt-32 md:pt-40">
    <div class="max-w-7xl mx-auto">
      <div class="animate-fade-in max-w-xl lg:max-w-2xl">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold mb-6 text-aluminum" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);">
          Specialized
          <br />
          <span class="text-construction-yellow">Crane Insurance</span>
          <br />
          <span class="text-aluminum/90">Coverage You Can Trust</span>
        </h1>
        
        <p class="text-lg sm:text-xl lg:text-2xl text-aluminum/90 mb-8 max-w-lg font-medium" style="text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);">
          Protect your crane operations with comprehensive liability, equipment, and riggers coverage from industry specialists.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <GlassButton 
            href="#contact-form" 
            size="lg"
            variant="primary"
            client:load
          >
            Get Free Quote
          </GlassButton>
        </div>
      </div>
    </div>
    
    <!-- Decorative elements - using industrial tones -->
    <div class="absolute top-1/4 -left-20 w-40 h-40 bg-construction-yellow/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 -right-20 w-60 h-60 bg-machinery-gray/10 rounded-full blur-3xl animate-float" style="animation-delay: 3s;"></div>
  </div>
  
  <!-- Logo Scroller -->
  <LogoScroller client:visible />
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-32 left-1/2 transform -translate-x-1/2 animate-bounce z-20">
    <div class="w-6 h-10 border-2 border-aluminum/30 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-aluminum/50 rounded-full mt-2"></div>
    </div>
  </div>
</section>
